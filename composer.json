{
    "name": "oxygen/mod-media",
    "description": "Media Storage and Editing",
    "license": "MIT",
    "keywords": [
        "cms",
        "framework",
        "OxygenExtension"
    ],
    "authors": [
        {
            "name": "Chris Chamberlain",
            "email": "chris@chamberlain.id.au"
        }
    ],
    "require": {
        "php": "^8.1",
        "oxygen/core": "dev-laravel10",
        "oxygen/crud": "dev-laravel10",
        "oxygen/data": "dev-laravel10",
        "oxygen/mod-import-export": "dev-laravel10",
        "intervention/image":  "~2.0",
        "illuminate/support": "^10.0",
        "sensiolabs/ansi-to-html": "^1.2",
        "org_heigl/ghostscript": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "OxygenModule\\Media\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "OxygenModule\\Media\\MediaServiceProvider"
            ]
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^1.8",
        "phpspec/phpspec": "^6.1"
    },
    "scripts": {
        "test": "vendor/bin/phpspec run && vendor/bin/phpstan analyze src --level 3"
    }
}
